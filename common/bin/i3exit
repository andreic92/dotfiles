#!/bin/sh
lock() {
  i3lock -f -t -i $HOME/.wallpapers/archlinux-simplyblack.png
}

case "$1" in
  lock)
    lock
    ;;
  logout)
    i3-msg exit
    ;;
  suspend)
    lock && systemctl suspend
    ;;
  hibernate)
    lock && systemctl hibernate
    ;;
  reboot)
    sysmemctl reboot
    ;;
  shutdown)
    xfce4-terminal -e "sudo pacman -Syu --noconfirm"
    systemctl poweroff
    ;;
  *)
    echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
    exit 2
esac
                                                                                                                                                
exit 0
